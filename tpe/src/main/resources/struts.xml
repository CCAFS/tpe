			<default-interceptor-ref name="ccafsStack" /> -->

		<global-results>
			<result name="error">/WEB-INF/pages/generic-error.jsp</result>
			<result name="download" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">downloadStream</param>
				<param name="contentDisposition">attachment; filename="${downloadFileName}"</param>
				<param name="bufferSize">2048</param>
			</result>
			<result name="dashboard" type="redirectAction">index</result>
			<result name="error">/WEB-INF/pages/tpe/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping result="error"
				exception="org.springframework.dao.DataIntegrityViolationException" />
			<exception-mapping result="error" exception="java.lang.Exception" />
		</global-exception-mappings>

		<!-- Actions -->
		<action name="index" class="indexAction" method="execute">
			<result name="success">/WEB-INF/pages/index.jsp</result>
		</action>
		<action name="documentation" class="indexAction" method="documentation">
			<result name="success">/WEB-INF/pages/tpe/documentation.jsp</result>
		</action>
		<action name="resources" class="indexAction" method="resources">
			<result name="success">/WEB-INF/pages/tpe/resources.jsp</result>
		</action>
		<action name="contactUs" class="contactAction">
			<result name="success">/WEB-INF/pages/tpe/contactus.jsp</result>
			<!-- <result name="error">/WEB-INF/pages/tpe/error.jsp</result> -->
		</action>
		<action name="contact_us" class="contactAction" method="contactus">
			<!-- <result name="success">/WEB-INF/pages/tpe/contactus.jsp</result> -->
			<!-- <result name="error">/WEB-INF/pages/tpe/error.jsp</result> -->
		</action>
		<action name="contactInfo" class="contactUsAction">
			<result name="success">/WEB-INF/pages/tpe/contribute.jsp</result>
			<result name="error">/WEB-INF/pages/tpe/error.jsp</result>
		</action>
		<action name="contribute" class="indexAction">
			<result name="success">/WEB-INF/pages/tpe/contribute.jsp</result>
		</action>
		<action name="getinvolved" class="indexAction">
			<result name="success">/WEB-INF/pages/tpe/get-involved.jsp</result>
		</action>
		<action name="workshops" class="indexAction" method="workshops">
			<result name="success">/WEB-INF/pages/tpe/workshops.jsp</result>
		</action>
		<action name="toolIndex" class="tpeAction">
			<result name="success">/WEB-INF/pages/tpe/tpe-index.jsp</result>
		</action>
		<action name="visualization" class="tpeAction">
			<result name="success">/WEB-INF/pages/tpe/tpe-index.jsp</result>
		</action>
		<action name="map/options" class="tpeAction" method="paramsOut">
			<result name="soil">/WEB-INF/pages/tpe/soil-params.jsp</result>
			<result name="tpe">/WEB-INF/pages/tpe/tpe-params.jsp</result>
			<result name="stability">/WEB-INF/pages/tpe/tpe-params.jsp</result>
			<result name="climate">/WEB-INF/pages/tpe/climate-params.jsp</result>
		</action>
		<action name="subregions" class="tpeAction" method="loadSubregions">
			<result name="subregions">/WEB-INF/pages/tpe/subregions.jsp</result>
		</action>
		<action name="cultivars" class="tpeAction" method="loadCultivars">
			<result name="cultivars">/WEB-INF/pages/tpe/cultivars.jsp</result>
		</action>
		<action name="years" class="tpeAction" method="loadYears">
			<result name="years">/WEB-INF/pages/tpe/years.jsp</result>
		</action>

		<action name="tutorials" class="indexAction" method="tutorials">
			<result name="success">/WEB-INF/pages/tpe/doc-tutorials.jsp</result>
		</action>

		<action name="login" class="loginAction">
			<result name="success">/WEB-INF/pages/admin/login.jsp</result>
			<result name="error">/WEB-INF/pages/admin/login.jsp</result>
			<result name="input">/WEB-INF/pages/admin/login.jsp</result>
		</action>
		<action name="accessdenied" class="loginAction" method="denied">
			<result name="denied">/WEB-INF/pages/admin/accessdenied.jsp</result>
		</action>
		<action name="logout">
			<result name="success" type="redirect">/j_spring_security_logout</result>
		</action>
		<action name="tags" class="tagsAction" method="execute">
			<result name="success">/WEB-INF/pages/tpe/tags.jsp</result>
		</action>
		<action name="posts" class="tagsAction" method="posts">
			<result name="success">/WEB-INF/pages/tpe/posts.jsp</result>
		</action>
		<action name="google/analytics" class="googleAnalyticsAction">
			<result>/WEB-INF/pages/google/analytics.jsp</result>
		</action>

	</package>

	<package name="tpe-docs" extends="default" namespace="/docs">
		<action name="project" class="indexAction" method="project">
			<result name="success">/WEB-INF/pages/tpe/doc-project.jsp</result>
		</action>

		<action name="scientific" class="indexAction" method="scientific">
			<result name="success">/WEB-INF/pages/tpe/doc-scientific.jsp</result>
		</action>
		<action name="brazilian" class="indexAction" method="scientific">
			<result name="success">/WEB-INF/pages/tpe/brazilian.jsp</result>
		</action>
		<action name="colombian" class="indexAction" method="scientific">
			<result name="success">/WEB-INF/pages/tpe/colombian.jsp</result>
		</action>
		<action name="docs" class="indexAction" method="scientific">
			<result name="success">/WEB-INF/pages/tpe/doc-index.jsp</result>
		</action>
	</package>

	<!-- Configuration for the security actions -->
	<!-- <package name="tpe-login" extends="default"> <action name="login"> 
		<result>/WEB-INF/pages/admin/login.jsp</result> </action> <action name="accessdenied"> 
		<result>/WEB-INF/pages/admin/accessdenied.jsp</result> </action> </package> -->

	<package name="tpe-admin" extends="default" namespace="/admin">

		<action name="users" class="userAction" method="execute">
			<result name="success">/WEB-INF/pages/admin/users.jsp</result>
			<result name="input">/WEB-INF/pages/admin/users.jsp</result>
		</action>
		<action name="*Admin" class="userAction" method="{1}">
			<result name="input">/WEB-INF/pages/admin/user-add.jsp</result>
			<result name="edit">/WEB-INF/pages/admin/user-edit.jsp</result>
		</action>
		<action name="addUser" class="adminAction" method="add">
			<result name="success" type="redirectAction">users</result>
			<result name="input">/WEB-INF/pages/admin/user-add.jsp</result>
			<result name="error">/WEB-INF/pages/admin/user-add.jsp</result>
			<!-- <result name="input" type="redirectAction">addAdmin</result> -->
		</action>
		<action name="updateUser" class="adminAction" method="update">
			<result name="success" type="redirectAction">users</result>
			<result name="input">/WEB-INF/pages/admin/user-edit.jsp</result>
			<result name="error">/WEB-INF/pages/admin/user-edit.jsp</result>
			<!-- <result name="input" type="redirectAction">addAdmin</result> -->
		</action>
		<action name="tag/list" class="tagsAction" method="execute">
			<result name="success">/WEB-INF/pages/admin/tag-list.jsp</result>
		</action>

		<action name="tag/add" class="tagsAction" method="add">
			<result name="success">/WEB-INF/pages/admin/add-tag.jsp</result>
			<result name="error">/WEB-INF/pages/admin/add-tag.jsp</result>
			<result name="input">/WEB-INF/pages/admin/add-tag.jsp</result>
		</action>

		<action name="tag/edit" class="tagsAction" method="edit">
			<result name="success">/WEB-INF/pages/admin/edit-tag.jsp</result>
			<result name="error">/WEB-INF/pages/admin/edit-tag.jsp</result>
			<result name="input">/WEB-INF/pages/admin/edit-tag.jsp</result>
		</action>

	</package>

	<package name="tpe-json" extends="struts-default,json-default"
		namespace="/json">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<interceptors>
			<interceptor name="json"
				class="org.apache.struts2.json.JSONInterceptor" />
		</interceptors>
		<action name="geoJsonFeatures" class="geoJsonAction">
			<result type="json">
				<param name="includeProperties">collections.*</param>
			</result>
		</action>
		<action name="stationGeoJson" class="stationGeoJsonAction">
			<result type="json">
				<param name="includeProperties">stations.*</param>
			</result>
		</action>
		<action name="soilGeoJson" class="soilGeoJsonAction">
			<result type="json">
				<param name="includeProperties">growingRegionsJson.*,featuresJson.*,regionJson.*,zoom,municipalitiesJson.*,lat,lng,seriesJson.*,categoriesJson.*,tpeBoundaryJson.*</param>
			</result>
		</action>
		<action name="tpeGeoJson" class="tpeGeoJsonAction">
			<result type="json">
				<param name="includeProperties">featuresJson.*,regionJson.*,municipalitiesJson.*,zoom,lat,lng,tpeBoundaryJson.*,boxJson.*,categoriesJson.*,seriesJson.*</param>
			</result>
		</action>
		<action name="climateGeoJson" class="climateGeoJsonAction">
			<result type="json">
				<param name="includeProperties">growingRegionsJson.*,featuresJson.*,municipalitiesJson.*,regionJson.*,zoom,lat,lng</param>
			</result>
		</action>
		<action name="tagsJson" class="tagsAction">
			<result type="json">
				<param name="includeProperties">tags.*</param>
			</result>
		</action>
		<action name="stabilityGeoJson" class="stabilityGeoJsonAction">
			<result type="json">
				<param name="includeProperties">featuresJson.*,regionJson.*,municipalitiesJson.*.*,zoom,lat,lng,tpeBoundaryJson.*,boxJson.*,categoriesJson.*,seriesJson.*</param>
			</result>
		</action>
	</package>



</struts>